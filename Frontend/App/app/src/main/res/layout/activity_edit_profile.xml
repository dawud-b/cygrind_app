<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <Button
            android:id="@+id/edit_password_btn"
            android:layout_width="186.5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:text="Change Password" />

        <Button
            android:id="@+id/delete_acc_btn"
            android:layout_width="186.5dp"
            android:layout_height="wrap_content"
            android:text="Delete Account"
            android:background="@drawable/rounded_button"/>
    </LinearLayout>

    <Button
        android:id="@+id/edit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="131dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_placeholder" />

    <LinearLayout
        android:id="@+id/Name"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <TextView
            android:id="@+id/nameView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/name_editable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20sp"
            android:inputType="text"
            android:gravity="center_vertical"
            android:text="Display Name" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/Age"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Name">

        <TextView
            android:id="@+id/ageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Age:"
            android:layout_weight="1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/age_editable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="20sp"
            android:height="48dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:text="Display Age" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/Weight"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Age">

        <TextView
            android:id="@+id/weightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Weight:"
            android:layout_weight="1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/weight_editable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:height="48dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textSize="20sp"
            android:text="Display Weight" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Height"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Weight">

        <TextView
            android:id="@+id/heightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Height:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/height_editable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:height="48dp"
            android:gravity="center_vertical"
            android:inputType="text"
            android:textSize="20sp"
            android:text="Display Height" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Email"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Height">

        <TextView
            android:id="@+id/emailView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Email:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextEmailAddress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="374dp"
        android:layout_height="49dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Email">

        <TextView
            android:id="@+id/phone_numberView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Phone:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextPhone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:inputType="phone"
            android:textSize="20sp" />



    </LinearLayout>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>