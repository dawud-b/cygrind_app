<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start"
    android:padding="10dp">

    <!-- Username + Timestamp -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/message_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingBottom="4dp"
            android:text="Other User"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 PM"
            android:textColor="#888888"
            android:textSize="10sp"
            android:paddingStart="8dp" />
    </LinearLayout>

    <!-- Message Bubble + Reaction Views -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start">

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other User Message"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/other_user_message_bg"
            android:maxWidth="250dp" />

        <!-- Reaction Views (1 row) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton android:id="@+id/reactionViewThumbsUp" style="@style/ReactionViewStyle" android:src="@drawable/thumbs_up_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewLove" style="@style/ReactionViewStyle" android:src="@drawable/heart_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewCool" style="@style/ReactionViewStyle" android:src="@drawable/cool_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewStrong" style="@style/ReactionViewStyle" android:src="@drawable/musculous_arm_silhouette_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewDisliked" style="@style/ReactionViewStyle" android:src="@drawable/eggplant_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewFire" style="@style/ReactionViewStyle" android:src="@drawable/fire_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewTrophy" style="@style/ReactionViewStyle" android:src="@drawable/trophy_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewCrown" style="@style/ReactionViewStyle" android:src="@drawable/crown_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewDiamond" style="@style/ReactionViewStyle" android:src="@drawable/diamond_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewRocket" style="@style/ReactionViewStyle" android:src="@drawable/rocket_svgrepo_com" />
            <ImageButton android:id="@+id/reactionViewUnicorn" style="@style/ReactionViewStyle" android:src="@drawable/unicorn_svgrepo_com" />

        </LinearLayout>
    </LinearLayout>

    <!-- Hidden Reaction Container (2x7 grid) -->
    <LinearLayout
        android:id="@+id/reactionContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="8dp"
        android:visibility="gone">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton android:id="@+id/reactionThumbsUp" style="@style/ReactionButtonStyle" android:src="@drawable/thumbs_up_svgrepo_com" />
            <ImageButton android:id="@+id/reactionLove" style="@style/ReactionButtonStyle" android:src="@drawable/heart_svgrepo_com" />
            <ImageButton android:id="@+id/reactionCool" style="@style/ReactionButtonStyle" android:src="@drawable/cool_svgrepo_com" />
            <ImageButton android:id="@+id/reactionStrong" style="@style/ReactionButtonStyle" android:src="@drawable/musculous_arm_silhouette_svgrepo_com" />
            <ImageButton android:id="@+id/reactionDisliked" style="@style/ReactionButtonStyle" android:src="@drawable/eggplant_svgrepo_com" />
            <ImageButton android:id="@+id/reactionFire" style="@style/ReactionButtonStyle" android:src="@drawable/fire_svgrepo_com" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton android:id="@+id/reactionTrophy" style="@style/ReactionButtonStyle" android:src="@drawable/trophy_svgrepo_com" />
            <ImageButton android:id="@+id/reactionCrown" style="@style/ReactionButtonStyle" android:src="@drawable/crown_svgrepo_com" />
            <ImageButton android:id="@+id/reactionDiamond" style="@style/ReactionButtonStyle" android:src="@drawable/diamond_svgrepo_com" />
            <ImageButton android:id="@+id/reactionRocket" style="@style/ReactionButtonStyle" android:src="@drawable/rocket_svgrepo_com" />
            <ImageButton android:id="@+id/reactionUnicorn" style="@style/ReactionButtonStyle" android:src="@drawable/unicorn_svgrepo_com" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
