<!-- item_message_current_user.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="end"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
    <!-- Timestamp -->
    <TextView
        android:id="@+id/message_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:30 PM"
        android:textColor="#888888"
        android:textSize="10sp"
        android:layout_gravity="bottom|end"
        android:paddingEnd="8dp" />
    <!-- Username -->
    <TextView
        android:id="@+id/message_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:paddingRight="12dp"
        android:paddingBottom="4dp"
        android:text="Current User"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
    </LinearLayout>

    <!-- Message Bubble -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">


        <ImageButton android:id="@+id/reactionViewThumbsUp" style="@style/ReactionViewStyle" android:src="@drawable/thumbs_up_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewLove" style="@style/ReactionViewStyle" android:src="@drawable/heart_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewCool" style="@style/ReactionViewStyle" android:src="@drawable/cool_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewStrong" style="@style/ReactionViewStyle" android:src="@drawable/musculous_arm_silhouette_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewDisliked" style="@style/ReactionViewStyle" android:src="@drawable/eggplant_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewFire" style="@style/ReactionViewStyle" android:src="@drawable/fire_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewTrophy" style="@style/ReactionViewStyle" android:src="@drawable/trophy_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewCrown" style="@style/ReactionViewStyle" android:src="@drawable/crown_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewDiamond" style="@style/ReactionViewStyle" android:src="@drawable/diamond_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewRocket" style="@style/ReactionViewStyle" android:src="@drawable/rocket_svgrepo_com" />
        <ImageButton android:id="@+id/reactionViewUnicorn" style="@style/ReactionViewStyle" android:src="@drawable/unicorn_svgrepo_com" />

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current User Message"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:background="@drawable/current_user_message_bg"
            android:maxWidth="250dp"
            android:layout_gravity="end" />


    </LinearLayout>
</LinearLayout>
